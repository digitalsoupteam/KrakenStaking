{
    "include": ["app/src/**/*.ts", "./tests/**/*.ts", "./scripts/**/*.ts"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["mocha", "chai"],
        "typeRoots": ["./node_modules/@types"],
        "lib": ["es2015"],
        "outDir": "./dist",
        "declaration": true,
        "module": "commonjs",
        "target": "esnext",
        "emitDeclarationOnly": true,
        "esModuleInterop": true
    }
}
